<fragment type="@fragment">
    <datalayer type="App\Vc\Trace\ShowDataLayer" />
    <element type="@infoTable"  title="Route trace information">
        <element type="@infoTableText" label="Uploaded by" text="${uploadedBy}" />
        <element type="@infoTableText" label="Location" text="${location}" />
        <element type="@infoTableText" label="Recorded at" text="${recordedAt}" />
        <element type="@infoTableText" label="Distance" text="${distance}" />
    </element>
    <element type="@staticText" text="Routes using this trace" class="traces_route_title" />
    <element type="@bulletList">
        <element type="@dynamicBulletItem" data="${usedInRoutes}">
            <element type="@staticText" text="${title}" />
        </element>
    </element>
    
</fragment>