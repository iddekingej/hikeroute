<page type="@hrPage"  title="Show route trace">
<!-- TODO display message when list is empty -->
    <datalayer type="App\Vc\Trace\ShowDataLayer" />
    <element type='@horizontalSizer'>
        <element type='@verticalSizer' containerWidth='200px'>
            <element type='@leftMenu' containerWidth='200px'>
                <element type='@menuGroup' title='Profile'>
                    <element type='@textMenuItem' tag='profile' text='Profile' route='user.profile' />
                </element>
                <element type='@menuGroup' title='Routes'>
                    <element type='@textMenuItem' tag='traces' text='Route traces' route='traces.list' />
                    <element type='@textMenuItem' tag='routes' text='Routes' route='routes' />
                </element>
            </element>
        </element>
		<element type='@verticalSizer' containerWidth='99%)'>
			<element type="@infoTable" title="Route trace information">
				<element type="@infoTableText" label="Uploaded by" text="${uploadedBy}" />
				<element type="@infoTableText" label="Location" text="${location}" />
				<element type="@infoTableText" label="Recorded at" text="${recordedAt}" />
				<element type="@infoTableText" label="Distance" text="${distance}" />
				<element type="@infoTableWidget" label="Download file">
					<element type="@textRouteLink" route="traces.download"
						parameters="${downloadParams}" text="Download file" />
				</element>
			</element>
			<element type="@staticText" text="Routes using this trace"
				class="traces_route_title" />
			<element type="@bulletList">
				<element type="@dynamicBulletItem" data="${usedInRoutes}">
					<element type="@textRouteLink" route="display.overview"
						parameters="${params}" text="${title}" />
				</element>
			</element>
			<element type="@openLayer" trace="${trace}" />
		</element>
    </element>
</page>